{
  "name": "@omicronenergy/oscd-api",
  "version": "0.0.14",
  "description": "OpenSCD API for IEC 61850 SCL files",
  "type": "module",
  "main": "./dist/oscd-api.js",
  "types": "./dist/oscd-api.d.ts",
  "scripts": {
    "lint": "eslint . && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint ./*.ts --fix",
    "test": "npm run build && wtr --coverage",
    "test:watch": "npm run build && concurrently -k -r \"tsc -b --watch --preserveWatchOutput\" \"wtr --watch --coverage\"",
    "build": "npx rimraf dist && tsc --pretty",
    "doc": "npx rimraf doc && typedoc --out doc oscd-api.ts",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OMICRONEnergyOSS/oscd-api.git"
  },
  "bugs": {
    "url": "https://github.com/OMICRONEnergyOSS/oscd-api/issues"
  },
  "homepage": "https://openscd.org",
  "keywords": [
    "OpenSCD",
    "iec81650"
  ],
  "author": "OMICRON Electronics GmbH",
  "license": "Apache-2.0",
  "files": [
    "**/*.js",
    "**/*.js.map",
    "**/*.d.ts",
    "!**/*.spec.*",
    "!commitlint.config.js",
    "!coverage",
    "!doc"
  ],
  "dependencies": {
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@open-wc/eslint-config": "^12.0.3",
    "@open-wc/testing": "3.2.2",
    "@types/mocha": "^10.0.8",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@web/test-runner": "0.19.0",
    "concurrently": "^9.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.3.2",
    "rimraf": "^3.0.2",
    "typedoc": "^0.28.5",
    "typescript": "^5.5.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "lib": [
        "es2018",
        "dom"
      ]
    },
    "extends": [
      "@open-wc",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "dist/",
      "node_modules",
      "coverage",
      "doc"
    ],
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-tsdoc"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-use-before-define": "off",
      "class-methods-use-this": [
        "error",
        {
          "exceptMethods": [
            "locale"
          ]
        }
      ],
      "@typescript-eslint/no-explicit-any": [
        "error",
        {
          "ignoreRestArgs": true
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.test.ts",
            "**/*.spec.ts"
          ]
        }
      ],
      "curly": [
        "error",
        "all"
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "destructuredArrayIgnorePattern": "^_"
        }
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.spec.ts",
          "**/*.test.ts"
        ],
        "rules": {
          "no-unused-expressions": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --config package.json",
      "prettier --write",
      "eslint --config package.json"
    ]
  }
}
